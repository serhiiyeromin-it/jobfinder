  - package-ecosystem: "npm"
    directory: "/frontend"
    schedule:
      interval: "monthly"
      day: "monday"    # lÃ¤uft am ersten Montag des Monats
      time: "02:00"    # UTC
    open-pull-requests-limit: 1   # maximal ein PR
    rebase-strategy: "disabled"  # nicht tÃ¤glich neu erstellen

  # ğŸ³ Aktualisierungen fÃ¼r Docker
  - package-ecosystem: "docker"
